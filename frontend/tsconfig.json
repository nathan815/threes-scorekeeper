{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./tsc-dist",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "checkJs": true,
    "allowJs": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": false,
    "lib": ["dom"]
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src"]
}
